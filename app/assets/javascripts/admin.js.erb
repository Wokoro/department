     $("body").click(function(event){
         var x = event.target.id;
         var ref = $("#"+x).attr("data-ref");
         if (ref){
            $("[data-class=display]").each(function(){
                $(this).fadeOut(1);
            });

            $("[data-class=remove]").each(function(){
                    $(this).remove();
            });

            $("#"+ref).fadeIn(50);
         }
     });



});
