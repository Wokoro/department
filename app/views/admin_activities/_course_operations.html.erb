<div class="my-modal">
    <div id = "create_modal" class="my-modal-content">
        <div class="my-modal-header">
          <span class="close">&times;</span>
          <h2>CREATE NEW COURSE</h2>
        </div>
        <div id="create_modal_body" class="my-modal-body">
            <div id ="create_course_option" class="course_option" data-class="display">
            <div class = "row">
                <div class = "col-t-2 col-d-2"></div>
                    <div class = "col-t-8 col-d-8">
                        <div class="handle white_bg">
                            <% if flash[:success] %>
                                <div class = 'success'><%= flash[:success] %></div>
                            <% end %>
                            <% if flash[:error] %>
                                <div data-class="notice" class = 'error'></div>
                            <% end %>
                            <%= form_for :create_course, url:create_course_path, remote:true do|f| %>
                            <%= f.label :ccode,  id: 'create_ccode' %>
                            <%= f.text_field :ccode, id: 'create_ccode_field', class: 'modal_inputs' %><br/>
                            <%= f.label :ctitle,  id: 'create_ctitle' %>
                            <%= f.text_field :ctitle,  id: 'create_ctitle_field', class: 'modal_inputs' %><br/>
                            <%= f.label :unit,  id: 'create_unit' %>
                            <%= f.text_field :unit,  id: 'create_units_field', class: 'modal_inputs' %><br/>
                            <%= f.label :level,  id: 'create_level' %>
                            <%= f.text_field :level,  id: 'create_level_field', class: 'modal_inputs' %><br/>
                            <%= f.label :semester,  id: 'create_semester' %>
                            <%= f.text_field :semester,  id: 'create_semester_field', class: 'modal_inputs' %><br/>
                            <%= f.submit :create, id: 'create_course' %>
                            <% end %>
                        </div>
                </div>
            <div class = "col-t-2 col-d-2"></div>
        </div>
    </div>
        </div>
    </div>


    <div id = "edit_modal" class="my-modal-content">
        <div class="my-modal-header">
          <span class="close">&times;</span>
          <h2>Edit Course</h2>
        </div>
        <div id = "edit_modal_body" class="my-modal-body">
        <div id = "find_course_option" class="course_option" data-class="display">
           <div class = "row">
                <div class = "col-t-2 col-d-2"></div>
                    <div class = "col-t-8 col-d-8">
                            <div class="handle white_bg">
                                <% if flash[:success] %>
                                    <div class = 'success'><%= flash[:success] %></div>
                                <% end %>
                                <% if flash[:error] %>
                                    <div class = 'error'><%= flash[:error] %></div>
                                <% end %>
                                <%= form_for :find_course, url:find_course_path, remote:true do|f| %>
                                    <%= f.label :ccode,  id: 'find_ccode' %>
                                    <%= f.text_field :ccode, id:'find_ccode_field' %><br/>
                                    <%= f.submit :Find, id: 'find_course' %>
                                <% end %>
                            </div>
                    </div>
                <div class = "col-2"></div>
            </div>
            </div>
        </div>
      </div>



    <div id = "delete_modal" class="my-modal-content">
        <div class="my-modal-header">
          <span class="close">&times;</span>
          <h2>COURSE DELETE</h2>
        </div>
        <div class="my-modal-body">
          <div class = "row">
             <div id = "delete_modal_body" class="my-modal-body">
        <div id = "delete_course_option" class="course_option" data-class="display">
                <div class = "col-t-2 col-d-2"></div>
                    <div class = "col-t-8 col-d-8">
                            <div class="handle white_bg">
                                <h4>Find Course</h4>
                                <% if flash[:success] %>
                                    <div class = 'success'><%= flash[:success] %></div>
                                <% end %>
                                <% if flash[:error] %>
                                    <div class = 'error'><%= flash[:error] %></div>
                                <% end %>
                                <%= form_for :fnd_course, url:fnd_course_path, remote:true do|f| %>
                                <%= f.label :ccode,  id: 'fnd_ccode' %>
                                <%= f.text_field :ccode, id: 'fnd_ccode_field', placeholder: 'Enter course code ....'%><br/>
                                <%= f.submit :find %>
                                <% end %>
                            </div>
                    </div>
                <div class = "col-2"></div>
            </div>
        </div>
    </div>
        </div>
      </div>
</div>