<div class="my-modal">
    <div id = "create_modal" class="my-modal-content">
        <div class="my-modal-header">
          <span class="close">&times;</span>
          <h2>CREATE NEW COURSE</h2>
        </div>
        <div id="create_modal_body" class="my-modal-body">
            <div id ="create_course_option" class="course_option" data-class="display">
            <div class = "myrow">
                    <div class = "col-t-12 col-d-12 no-padding">
                        <div class="handle white_bg">
                            <% if flash[:success] %>
                                <div class = 'success'><%= flash[:success] %></div>
                            <% end %>
                            <% if flash[:error] %>
                                <div data-class="notice" class = 'error'></div>
                            <% end %>
                            <%= form_for :create_course,  url:create_course_path, remote:true, html: {id: "create_form"} do|f| %>

                            <%= f.label "Code : ",  id: 'create_ccode'%>
                            <%= f.text_field :code, id: 'create_ccode_field', class: 'modal_inputs', maxlength: '7'%>

                            <%= f.label "Title : ",  id: 'create_ctitle' %>
                            <%= f.text_field :ctitle,  id: 'create_ctitle_field', class: 'modal_inputs' %>

                            <%= f.label "Unit : ",  id: 'create_unit' %>
                            <%= f.text_field :unit,  id: 'create_units_field', class: 'modal_inputs', maxlength: '2' %>

                            <%= f.label "Level : ",  id: 'create_level' %>
                            <select name="level" class="modal_inputs">
                                <option value = "100"> 100</option>
                                <option value = "200"> 200</option>
                                <option value = "300"> 300</option>
                                <option value = "400"> 400</option>
                                <option value = "500"> 500</option>
                            </select>

                            <%= f.label"Status : ",  id: 'create_status' %>
                            <select  name="status" class="modal_inputs">
                                <option value = "borrowed"> borrowed</option>
                                <option value = "spill over">spill over</option>
                                <option value = "elective">elective</option>
                            </select>

                            <%= f.label "Semester : ",  id: 'create_semester' %>
                            <%= f.radio_button :semester, "first",  class: 'modal_inputs' %><%= f.label "first", class: "status"%>
                            <%= f.radio_button :semester, "second", class: 'modal_inputs' %><%= f.label "second", class: "status"%><div id="addrow" class="custom_button", data-row="new_row", onclick="add()">+</div><div id="remrow" class="custom_button", data-row="del_row">-</div><br/>
                            <div id ="append">
                            </div>

                            <%= f.submit :create, id: 'create_course' %>
                            <% end %>
                        </div>
                </div>
        </div>
    </div>
        </div>
</div>


    <div id = "edit_modal" class="my-modal-content">
        <div class="my-modal-header">
          <span class="close">&times;</span>
          <h2>Edit Course</h2>
        </div>
        <div id = "edit_modal_body" class="my-modal-body">
        <div id = "find_course_option" class="course_option" data-class="display">
           <div class = "row">
                <div class = "col-t-2 col-d-2"></div>
                    <div class = "col-t-8 col-d-8">
                            <div class="handle white_bg">
                                <% if flash[:success] %>
                                    <div class = 'success'><%= flash[:success] %></div>
                                <% end %>
                                <% if flash[:error] %>
                                    <div class = 'error'><%= flash[:error] %></div>
                                <% end %>
                                <%= form_for :find_course, url:find_course_path, remote:true do|f| %>
                                    <%= f.label :ccode,  id: 'find_ccode' %>
                                    <%= f.text_field :ccode, id:'find_ccode_field' %><br/>
                                    <%= f.submit :Find, id: 'find_course' %>
                                <% end %>
                            </div>
                    </div>
                <div class = "col-2"></div>
            </div>
            </div>
        </div>
      </div>



    <div id = "delete_modal" class="my-modal-content">
        <div class="my-modal-header">
          <span class="close">&times;</span>
          <h2>COURSE DELETE</h2>
        </div>
        <div class="my-modal-body">
          <div class = "row">
             <div id = "delete_modal_body" class="my-modal-body">
        <div id = "delete_course_option" class="course_option" data-class="display">
                <div class = "col-t-2 col-d-2"></div>
                    <div class = "col-t-8 col-d-8">
                            <div class="handle white_bg">
                                <h4>Find Course</h4>
                                <% if flash[:success] %>
                                    <div class = 'success'><%= flash[:success] %></div>
                                <% end %>
                                <% if flash[:error] %>
                                    <div class = 'error'><%= flash[:error] %></div>
                                <% end %>
                                <%= form_for :fnd_course, url:fnd_course_path, remote:true do|f| %>
                                <%= f.label :ccode,  id: 'fnd_ccode' %>
                                <%= f.text_field :ccode, id: 'fnd_ccode_field', placeholder: 'Enter course code ....'%><br/>
                                <%= f.submit :find %>
                                <% end %>
                            </div>
                    </div>
                <div class = "col-2"></div>
            </div>
        </div>
    </div>
        </div>
      </div>
</div>